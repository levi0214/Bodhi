{
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "parser": "solidity-parse",
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false
      }
    },
    {
       "files": "*.js",
       "options": {
          "trailingComma": "es5",
          "tabWidth": 4,
          "semi": false,
          "singleQuote": true,
          "printWidth": 120
       }
    }
  ]
}
